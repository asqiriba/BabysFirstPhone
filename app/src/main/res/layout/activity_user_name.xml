<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserNameActivity">


    <TextView
        android:id="@+id/UserNamePrompt"
        android:layout_width="288dp"
        android:layout_height="83dp"
        android:layout_above="@+id/CurrentNamePrompt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="46dp"
        android:textSize="32sp"
        android:text="Edit name of user: " />

    <TextView
        android:id="@+id/CurrentNamePrompt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/user_text"
        android:layout_marginStart="32dp"
        android:textSize="18sp"
        android:text="Current name of user: "
        />

    <TextView
        android:id="@+id/CurrentName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/user_text"
        android:layout_toRightOf="@id/CurrentNamePrompt"
        android:textSize="18sp"
        android:text="User"
        />


    <EditText
        android:id="@+id/user_text"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:hint="New Name"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_text" />


</RelativeLayout>