<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/holo_purple">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:fabSize="normal"
        android:src="@drawable/ic_baseline_keyboard_return_24"
        android:id="@+id/home_button"/>

    <Button
        android:id="@+id/contactButton"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="testContactActivity"
        android:text="Manage Contacts"/>

    <Button
        android:id="@+id/zoomButton"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/contactButton"
        android:onClick="testContactActivity"
        android:text="Zoom Account"/>


    <Button
        android:id="@+id/emergencyButton"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/zoomButton"
        android:onClick="testContactActivity"
        android:text="Emergency Contacts" />

    <Button
        android:id="@+id/listButton"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Arrange Contact List"
        android:layout_above="@id/contactButton"/>
</RelativeLayout>